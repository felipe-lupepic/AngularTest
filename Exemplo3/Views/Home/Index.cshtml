@model Exemplo3.Models.ExemploViewModel

@{
    ViewBag.Title = "Index";
}

<html lang="en">
<head>
    <title>My Angular Application</title>
    <link href="../Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/angular-min.js" type="text/javascript"></script>
    <script src="../Scripts/jquery-1.10.2.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
    @*<script src="../Scripts/Events/eventModule.js"></script>
        <script src="../Scripts/Events/eventController.js"></script>*@
</head>
<body>
    <div class="portlet light bg-inverse">
        <div class="portlet-body form">
            <form action="" autocomplete="off" class="horizontal-form" id="formExtensions" method="post" name="formExtensions">
                <div class="form-body">
                    <div class="row">

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Id, new { @class = "control-label" })
                                <input class="form-control" id="Id" type="text">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                <input class="form-control" id="Name" type="text">
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Speaker, new { @class = "control-label" })
                                <input class="form-control" id="Speaker" type="text">
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Venue, new { @class = "control-label" })
                                <input class="form-control" id="Venue" type="text">
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Duration, new { @class = "control-label" })
                                <input class="form-control" id="Duration" type="text">
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Id, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Speaker, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Speaker, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Venue, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Venue, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Duration, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
